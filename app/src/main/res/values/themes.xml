<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">monospace</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HealthApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HealthApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HealthApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultRecyclerViewStyle">
        <item name="android:background">@drawable/default_rounded_corners_bg</item>
    </style>
    
    <style name="ShapeAppearanceImage">
        <item name="cornerSize">10%</item>
    </style>

    <style name="EditTextLayoutWithHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" >
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/light_blue</item>
        <item name="boxStrokeColor">@color/light_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="colorAccent">@color/light_blue</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColorHighlight">@color/light_blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PickHolderTextView" parent="EditTextStyle">
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
    </style>
    
    <style name="DefaultButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/strong_gray</item>
    </style>

</resources>